<Window x:Class="HueLock.Hue.ConfirmLink"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HueLock.Hue"
        mc:Ignorable="d"
        Title="Link Hue Bridge" Height="200" Width="600">
    <Grid>
        <TextBlock HorizontalAlignment="Center" FontSize="20">Press the button on your Hue Bridge to connect, then press OK.</TextBlock>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <Button x:Name="Confirm" Height="30" Width="100" Margin="20" Click="Confirm_Click">OK</Button>
            <Button x:Name="Cancel" Height="30" Width="100" Margin="20" Click="Cancel_Click">Cancel</Button>
        </StackPanel>
    </Grid>
</Window>
